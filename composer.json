{
    "name": "interview/invoice-module",
    "type": "project",
    "description": "Invoice Module - Modular Monolith with Symfony and Doctrine",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "symfony/framework-bundle": "^7.2",
        "symfony/runtime": "^7.2",
        "symfony/yaml": "^7.2",
        "symfony/dotenv": "^7.2",
        "doctrine/orm": "^3.3",
        "doctrine/doctrine-bundle": "^2.13",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "ramsey/uuid": "^4.7",
        "ramsey/uuid-doctrine": "^2.1",
        "symfony/validator": "^7.2",
        "symfony/serializer": "^7.2",
        "symfony/property-access": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "symfony/test-pack": "^1.1",
        "symfony/browser-kit": "^7.2",
        "symfony/css-selector": "^7.2",
        "doctrine/doctrine-fixtures-bundle": "^4.0",
        "dama/doctrine-test-bundle": "^8.2",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-symfony": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "vimeo/psalm": "^6.0",
        "psalm/plugin-symfony": "^5.2",
        "qossmic/deptrac": "^2.0",
        "php-cs-fixer/shim": "^3.64"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Modules\\": "src/Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": ["@auto-scripts"],
        "post-update-cmd": ["@auto-scripts"],

        "test": "@php bin/phpunit",
        "test:unit": "@php bin/phpunit --testsuite=Unit",
        "test:integration": "@php bin/phpunit --testsuite=Integration",
        "test:functional": "@php bin/phpunit --testsuite=Functional",
        "test:e2e": "@php bin/phpunit --testsuite=E2E",

        "phpstan": "phpstan analyse --memory-limit=512M",
        "psalm": "psalm --no-cache",
        "deptrac": "deptrac analyse --config-file=deptrac.yaml",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",

        "analyse": ["@phpstan", "@psalm", "@deptrac"],
        "ci": ["@cs-check", "@analyse", "@test"]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "symfony/runtime": true,
            "symfony/flex": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
